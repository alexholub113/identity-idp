{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "IdentityProvider": {
    "FrontendUrls": {
      "LoginUrl": "http://localhost:5173/login",
      "DashboardUrl": "http://localhost:5173/dashboard",
      "LogoutUrl": "http://localhost:5173/logout",
      "AccessDeniedUrl": "http://localhost:5173/access-denied"
    },
    "OAuthClients": {
      "bff-client": {
        "ClientId": "bff-client",
        "RedirectUri": "https://localhost:3000/callback",
        "Scopes": [
          "openid",
          "profile",
          "email"
        ]
      },
      "server-app": {
        "ClientId": "server-app",
        "RedirectUri": "https://api.example.com/oauth/callback",
        "Scopes": [
          "api.read"
        ]
      }
    }
  }
}