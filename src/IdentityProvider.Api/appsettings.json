{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "IdentityProvider": {
    "OAuthClients": {
      "customer-portal-client": {
        "ClientId": "customer-portal-client",
        "RedirectUri": "https://localhost:3000/callback",
        "Scopes": [ "openid", "profile", "email" ],
        "RequirePkce": true
      },
      "server-app": {
        "ClientId": "server-app",
        "RedirectUri": "https://api.example.com/oauth/callback",
        "Scopes": [ "api.read" ],
        "RequirePkce": false
      }
    }
  }
}
